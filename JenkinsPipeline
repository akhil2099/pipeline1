pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    // Configure Docker before using it
                    def dockerImage = docker.image('nginx').pull()
                    dockerImage.inside('-p 8080:80') {
                        sh 'cp index.html /usr/share/nginx/html/'
                    }
                }
            }
        }
    }
}
