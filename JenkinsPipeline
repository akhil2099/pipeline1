pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
	    	deleteDir()
                // Checkout the source code from your version control system (e.g., Git)
                checkout([$class: 'GitSCM',branches: [[name: 'main']], userRemoteConfigs: [[url: 'https://github.com/akhil2099/pipeline1.git']]])
            }
        }

        stage('Build and Deploy') {
            steps {
		echo "Build and deploy steps go here"
                sh 'cp -r index.html /tmp/'
		sh "hostname -I"
            }
        }

                
    }

    post {
        success {
            echo 'Pipeline succeeded! Trigger additional steps if needed.'
        }
        failure {
            echo 'Pipeline failed! Trigger rollback or other actions if needed.'
        }
    }
}

